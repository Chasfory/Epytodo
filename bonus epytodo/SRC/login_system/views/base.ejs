<!--suppression du header afin de rendre le code plus manipulable , voir header.ejs-->

<%- include('header') -%> <!-- Ajout du header -->
   
<div class="text-center center-div" id="login">
    <div class="header"> 
        <h1>Welome in our Epytodo - Bonus </h1>
        <button type="button" class="btn btn-success"><a href="#test" style="color: white;">Click to test</a>
        </button>
    </div>
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold" style="color: white;">Login System</h2><!--Pour enregistrer les modifications / lien avec le server-->
            <span style="color: white;">Log in for the existing user</span>
            <% if(locals.logout){ %>
                <div class="alter alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
        </div>
        <form action="/route/login" method="POST" class="pt-3" id="test"> <!--Va contenir toutes les infos du premier form-->
            
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="name">
            </div>

            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <!--<small class="form-text text-muted text-left">Register email address</small>-->
            </div> 

            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>




<%- include('footer') -%> <!-- Ajout du footer -->
    


